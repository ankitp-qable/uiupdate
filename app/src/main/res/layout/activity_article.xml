<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="articleVM" type="com.ankitsapplication.app.modules.article.data.viewmodel.ArticleVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearArticle"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <androidx.appcompat.widget.Toolbar android:gravity="start"
            android:id="@+id/toolbarToolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="@dimen/_26pxv"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <LinearLayout android:id="@+id/linearHeadergroup"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20pxh"
                android:layout_marginStart="@dimen/_21pxh"
                android:layout_width="match_parent" android:orientation="horizontal">
                <LinearLayout android:id="@+id/linearGroup101"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.98"
                    android:layout_width="0dp" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageIconlyLightAr"
                        android:layout_height="@dimen/_24pxh"
                        android:layout_width="@dimen/_24pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_iconlylightar_1"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_iconlylightar_1"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtArticles"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2pxv"
                        android:layout_marginStart="@dimen/_112pxh"
                        android:layout_marginTop="@dimen/_3pxv"
                        android:layout_weight="0.72"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:text="@{articleVM.articleModel.txtArticles}"
                        style="@style/txtIntersemibold16" tools:text="@string/lbl_articles"/>
                </LinearLayout>
                <ImageView android:id="@+id/imageComponent1"
                    android:layout_height="@dimen/_16pxh"
                    android:layout_marginBottom="@dimen/_4pxv"
                    android:layout_marginStart="@dimen/_133pxh"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_width="@dimen/_4pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_component1"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_component1"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <EditText
            android:background="@drawable/rectangle_bg_gray_50_border_bluegray_50_radius_8"
            android:drawablePadding="@dimen/_10pxh"
            android:drawableStart="@drawable/img_iconly_lightoutline_search_2"
            android:ellipsize="end"
            android:hint="@string/msg_search_articles"
            android:id="@+id/etSearch" android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20pxh"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_39pxv"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_12pxv"
            android:paddingStart="@dimen/_17pxh"
            android:paddingTop="@dimen/_12pxv" android:singleLine="true"
            android:text="@={articleVM.articleModel.etSearchValue}"
            android:textColorHint="@color/gray_500"
            style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtPopularArticle"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20pxh"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{articleVM.articleModel.txtPopularArticle}"
            style="@style/txtIntersemibold16_2" tools:text="@string/msg_popular_article"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearTopics"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_15pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <TextView android:id="@+id/txtCovidninteeng"
                android:layout_height="wrap_content"
                android:layout_weight="0.36" android:layout_width="0dp"
                android:paddingBottom="@dimen/_16pxv"
                android:paddingEnd="@dimen/_22pxh"
                android:paddingStart="@dimen/_22pxh"
                android:paddingTop="@dimen/_17pxv"
                android:text="@{articleVM.articleModel.txtCovidninteeng}"
                style="@style/txtSolidRounded_2" tools:text="@string/lbl_covid_19"/>
            <TextView android:id="@+id/txtDietgroup"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5pxh"
                android:layout_weight="0.32" android:layout_width="0dp"
                android:paddingBottom="@dimen/_16pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_17pxv"
                android:text="@{articleVM.articleModel.txtDietgroup}"
                style="@style/txtSolidRounded_2" tools:text="@string/lbl_diet"/>
            <TextView android:id="@+id/txtFitnessgroup"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5pxh"
                android:layout_weight="0.32" android:layout_width="0dp"
                android:paddingBottom="@dimen/_16pxv"
                android:paddingEnd="@dimen/_26pxh"
                android:paddingStart="@dimen/_26pxh"
                android:paddingTop="@dimen/_17pxv"
                android:text="@{articleVM.articleModel.txtFitnessgroup}"
                style="@style/txtSolidRounded_2" tools:text="@string/lbl_fitness"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearTrendingArticl"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <TextView android:ellipsize="end"
                android:id="@+id/txtTrendingArticl"
                android:layout_height="wrap_content"
                android:layout_weight="0.78" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{articleVM.articleModel.txtTrendingArticl}"
                style="@style/txtIntersemibold16_2" tools:text="@string/msg_trending_articl"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtSeeall"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2pxv"
                android:layout_marginStart="@dimen/_161pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_weight="0.22" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{articleVM.articleModel.txtSeeall}"
                style="@style/txtInterregular12_1" tools:text="@string/lbl_see_all"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:gravity="center_horizontal"
            android:id="@+id/recyclerTrendings"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            itemSpace="@{@dimen/_17pxh}" tools:itemCount="2" tools:listitem="@layout/row_trendings"/>
        <LinearLayout android:id="@+id/linearRelatedArticle"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_25pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <TextView android:ellipsize="end"
                android:id="@+id/txtRelatedArticle"
                android:layout_height="wrap_content"
                android:layout_weight="0.76" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{articleVM.articleModel.txtRelatedArticle}"
                style="@style/txtIntersemibold16_2" tools:text="@string/msg_related_article"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtSeeall1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2pxv"
                android:layout_marginStart="@dimen/_174pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_weight="0.24" android:layout_width="0dp"
                android:singleLine="true"
                android:text="@{articleVM.articleModel.txtSeeall1}"
                style="@style/txtInterregular12_1" tools:text="@string/lbl_see_all"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:gravity="center_horizontal"
            android:id="@+id/recyclerRelatedArticle"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_58pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_15pxv"
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            itemSpace="@{@dimen/_10pxh}" tools:itemCount="2" tools:listitem="@layout/row_relatedarticle"/>
    </LinearLayout>
</layout>
