<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="signupVM" type="com.ankitsapplication.app.modules.signup.data.viewmodel.SignupVM"/>
    </data>
    <LinearLayout android:gravity="start" android:id="@+id/linearSignup"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylecyan_300">
        <ImageView android:id="@+id/imageHidiclogo"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_42pxh"
            android:layout_marginEnd="@dimen/_15pxh"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_106pxv"
            android:layout_width="@dimen/_115pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_hidoclogo_1"
            tools:ignore="ContentDescription" tools:src="@drawable/img_hidoclogo_1"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtLetsGetStart"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15pxh"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_25pxv"
            android:layout_width="wrap_content"
            android:letterSpacing="0.03" android:singleLine="true"
            android:text="@{signupVM.signupModel.txtLetsGetStart}"
            style="@style/txtPoppinsbold16_1" tools:text="@string/msg_let_s_get_start"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtCreateannewa"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15pxh"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="wrap_content"
            android:letterSpacing="0.03" android:singleLine="true"
            android:text="@{signupVM.signupModel.txtCreateannewa}"
            style="@style/txtPoppinsregular12_2" tools:text="@string/msg_create_an_new_a"/>
        <EditText
            android:background="@drawable/rectangle_bg_white_a700_border_blue_50_radius_5"
            android:drawablePadding="@dimen/_10pxh"
            android:drawableStart="@drawable/img_system_icon_24px_user"
            android:ellipsize="end" android:hint="@string/lbl_full_name"
            android:id="@+id/etGroup35" android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15pxh"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_24pxv"
            android:layout_width="match_parent"
            android:letterSpacing="0.03"
            android:paddingBottom="@dimen/_16pxv"
            android:paddingStart="@dimen/_16pxh"
            android:paddingTop="@dimen/_16pxv" android:singleLine="true"
            android:text="@={signupVM.signupModel.etGroup35Value}"
            android:textColorHint="@color/bluegray_300"
            style="@style/etSolidRoundedOutline_1" tools:ignore="Autofill"/>
        <EditText
            android:background="@drawable/rectangle_bg_white_a700_border_blue_50_radius_5"
            android:drawablePadding="@dimen/_10pxh"
            android:drawableStart="@drawable/img_system_icon_24px_message"
            android:ellipsize="end"
            android:hint="@string/lbl_your_email"
            android:id="@+id/etGroup34" android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15pxh"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="match_parent"
            android:letterSpacing="0.03"
            android:paddingBottom="@dimen/_16pxv"
            android:paddingStart="@dimen/_16pxh"
            android:paddingTop="@dimen/_16pxv" android:singleLine="true"
            android:text="@={signupVM.signupModel.etGroup34Value}"
            android:textColorHint="@color/bluegray_300"
            style="@style/etSolidRoundedOutline_1" tools:ignore="Autofill"/>
        <EditText
            android:background="@drawable/rectangle_bg_white_a700_border_blue_50_radius_5"
            android:drawablePadding="@dimen/_10pxh"
            android:drawableStart="@drawable/img_system_icon_24px_password"
            android:ellipsize="end" android:hint="@string/lbl_password"
            android:id="@+id/etGroup33" android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15pxh"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="match_parent"
            android:letterSpacing="0.03"
            android:paddingBottom="@dimen/_16pxv"
            android:paddingStart="@dimen/_16pxh"
            android:paddingTop="@dimen/_16pxv" android:singleLine="true"
            android:text="@={signupVM.signupModel.etGroup33Value}"
            android:textColorHint="@color/bluegray_300"
            style="@style/etSolidRoundedOutline_1" tools:ignore="Autofill"/>
        <EditText
            android:background="@drawable/rectangle_bg_white_a700_border_blue_50_radius_5"
            android:drawablePadding="@dimen/_10pxh"
            android:drawableStart="@drawable/img_system_icon_24px_password"
            android:ellipsize="end"
            android:hint="@string/lbl_password_again"
            android:id="@+id/etGroup32" android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15pxh"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="match_parent"
            android:letterSpacing="0.03"
            android:paddingBottom="@dimen/_16pxv"
            android:paddingStart="@dimen/_16pxh"
            android:paddingTop="@dimen/_16pxv" android:singleLine="true"
            android:text="@={signupVM.signupModel.etGroup32Value}"
            android:textColorHint="@color/bluegray_300"
            style="@style/etSolidRoundedOutline_1" tools:ignore="Autofill"/>
        <TextView android:gravity="center_horizontal"
            android:id="@+id/txtSignup"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15pxh"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_39pxv"
            android:layout_width="match_parent"
            android:lineSpacingExtra="@dimen/_6pxh"
            android:paddingBottom="@dimen/_15pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_15pxv"
            android:text="@{signupVM.signupModel.txtSignup}"
            style="@style/txtSolidRounded_5" tools:text="@string/lbl_sign_up"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtConfirmation"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_15pxh"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_158pxv"
            android:layout_width="wrap_content"
            android:letterSpacing="0.03" android:singleLine="true"
            android:text="@{signupVM.signupModel.txtConfirmation}"
            style="@style/txtPoppinsbold12" tools:text="@string/msg_have_an_account"/>
    </LinearLayout>
</layout>
